# Copy this file to .env and fill in the values for your environment.
# Never commit your populated .env file.

# Server configuration
NODE_ENV=development
PORT=8080

# Security + networking
FORCE_HTTPS=false
HTTPS_EXEMPT_HOSTS=localhost,127.0.0.1
ALLOWED_COUNTRY_CODES=1

# Admin access (override the hardcoded defaults before deploying)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-before-prod

# Twilio SMS integration
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_PHONE_NUMBER=+15555550123
TWILIO_DOMAIN=https://your-domain.com

# Observability hooks (optional)
SENTRY_DSN=
